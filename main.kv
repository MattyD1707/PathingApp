Main:
    LoginScreen:
    Menu:
    FirstScreen:
    SecondScreen:
    ThirdScreen:



<LoginScreen>
    name: "login"
    BoxLayout:
	    orientation: 'vertical'
	    canvas:
		    Color:
			    rgb: 0.1,0.1,0.1

		    Rectangle:
			    pos: self.pos
			    size: self.size

        RelativeLayout:
            orientation:'vertical'

            MDLabel:
                text:'Welcome'
                halign:'center'
                font_size:20
                underline:True
                bold:True
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                color: 1,0,0,1

            MDTextFieldRound:
                id: user
                hint_text: "username"
                icon_right: "account"
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                color_mode: "custom"
                normal_color: 1,0,0,0.6
                color_active: 1,0.4,0,0.6



            MDTextFieldRound:
                id: pass
                hint_text: "password"
                icon_right: "eye-off"
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                password: True
                color_mode: "custom"
                normal_color: 1,0,0,0.6
                color_active: 1,0.4,0,0.6


            MDRaisedButton:
                text:'SIGN IN'
                font_size:15
                pos_hint:{'center_x':0.5,'center_y':0.2}
                on_press: app.root.current = "menu"

<Menu>:
    name: "menu"
    BoxLayout:
	    orientation: 'vertical'
	    canvas:
		    Color:
			    rgb: 1,1,1

		    Rectangle:
			    pos: self.pos
			    size: self.size

	    BoxLayout:
            size_hint_y: .4
            MDLabel:
			    text: "Welcome"
                font_size: 40
                halign: "center"
                pos_hint: {"top": 1}

		
	    RelativeLayout:

			MDRoundFlatIconButton:
			    icon: "apple"
			    text: "Profile"
			    on_press: app.root.current = "one"
			    theme_text_color: "Custom"
			    text_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.95}
    
			MDRoundFlatIconButton:
			    icon: "apple"
			    text: "Learn"
			    on_press: app.root.current = "two"
			    theme_text_color: "Custom"
			    text_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}

			MDRoundFlatIconButton:
			    text: 'Test'
			    on_press: app.root.current = "three"
			    icon: "apple"
			    theme_text_color: "Custom"
			    text_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            
			MDRoundFlatIconButton:
			    icon: "apple"
			    text: "Simulation"
			    on_press: app.root.current = "one"
			    theme_text_color: "Custom"
			    text_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    


			MDRoundFlatIconButton:
			    text: 'Log-Out'
			    on_press: app.root.current = "login"
			    icon: "apple"
			    theme_text_color: "Custom"
			    text_color: app.theme_cls.primary_color
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                
    

	    BoxLayout:
		    size_hint_y: .1

<LeftLabel@Label>:
    text_size: self.size
    halign: 'left'

<FirstScreen>:
    name: "one"
    BoxLayout:
	    orientation: 'vertical'
        canvas:
            Color:
                rgb: 0.2,0.2,0.2
            Rectangle:
                pos: self.pos
                size: self.size
            
        BoxLayout:
            size_hint_y: 5
        BoxLayout:
    	    padding: [20,20,20,20]
    	    spacing: 15
            MDRoundFlatIconButton:
                text: 'Back'
                on_press: app.root.current = "menu"




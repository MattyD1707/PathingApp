Main:
    LoginScreen:
    SignUpScreen:
    Menu:
    FirstScreen:
    SecondScreen:
    ThirdScreen:



<LoginScreen>:
    name: "login"
    username : username
    password : password
    BoxLayout:
	    orientation: 'vertical'
	    canvas:
		    Color:
			    rgb: 0.1,0.1,0.1

		    Rectangle:
			    pos: self.pos
			    size: self.size

        RelativeLayout:
            orientation:'vertical'

            MDLabel:
                text:'Welcome'
                halign:'center'
                font_size:20
                underline:True
                bold:True
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                color: 1,1,1

            MDTextFieldRound:
                id: username
                on_text: root.manager.get_screen("menu").ids.usernamelbl.text = self.text
                hint_text: "username"
                icon_right: "account"
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                color_mode: "custom"
                normal_color: 0,0.4,1,0.3
                color_active: 0,0.7,0.7,0.6



            MDTextFieldRound:
                id: password
                hint_text: "password"
                icon_right: "eye-off"
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                password: True
                color_mode: "custom"
                normal_color: 0,0.4,1,0.3
                color_active: 0,0.7,0.7,0.6

            MDRaisedButton:
                text:'SIGN IN'
                font_size:15
                pos_hint:{'center_x':0.5,'center_y':0.15}
                on_release:
                    root.validation()

            MDRaisedButton:
                text:'NEW ACCOUNT'
                font_size:15
                pos_hint:{'center_x':0.5,'center_y':0.25}
                on_release: app.root.current = "sign_up"


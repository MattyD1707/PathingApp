<Menu>:
    name: "menu"

    BoxLayout:
        orientation:'vertical'

        MDToolbar:
            title: 'Home'
            md_bg_color: .2, .2, .2, 1
            specific_text_color: 1, 1, 1, 1

        MDBottomNavigation:
            panel_color: .2, .2, .2, 1

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Home'
                icon: 'home-outline'

                RelativeLayout:

    
			        MDRoundFlatIconButton:
			            icon: "apple"
			            text: "Learn"
			            on_press: app.root.current = "one"
			            theme_text_color: "Custom"
			            text_color: app.theme_cls.primary_color
                        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

			        MDRoundFlatIconButton:
			            text: 'Test'
			            on_press: app.root.current = "two"
			            icon: "apple"
			            theme_text_color: "Custom"
			            text_color: app.theme_cls.primary_color
                        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            
		            MDRoundFlatIconButton:
                        text: "Open manager"
                        icon: "folder"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                        on_release: app.file_manager_open()

    

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Notes'
                icon: 'language-cpp'
                    
                MDGridLayout:
                    cols: 3

                    MDRoundFlatIconButton:
                        id: btn_open
                        text: "Open"
                        on_press: root.file_manager_open()

            
                    MDRoundFlatIconButton:
                        id: btn_save
                        text: "Save"
                        on_press: root.on_save()

            
                    MDRoundFlatIconButton:
                        id: btn_save_as
                        text: "Save As"
                        on_press: root.on_save_as()

                    MDRoundFlatIconButton:
                        id: btn_copy
                        text: "Copy"
                        on_press: root.on_copy()

            
                    MDRoundFlatIconButton:
                        id: btn_cut
                        text: "Cut"
                        on_press: root.on_cut()


                    MDRoundFlatIconButton:
                        id: btn_paste
                        text: "Paste"
                        on_press: root.on_paste()

            
                    MDRoundFlatIconButton:
                        id: btn_delete
                        text: "Delete"
                        on_press: root.on_delete()

                BoxLayout:
                    padding: 20,115
                    ScrollView:
                        do_scroll_x: False
                        do_scroll_y: True
                        MDTextField:
                            id: textInput
                            multiline: True
                            hint_text: "New Note:"



            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Profile'
                icon: 'account-outline'

                MDRoundFlatIconButton:
			        text: 'Log-Out'
			        on_press: 
                        app.root.current = "login"
                        root.manager.get_screen("login").ids.username.text = ""
			        icon: "apple"
			        theme_text_color: "Custom"
			        text_color: app.theme_cls.primary_color
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}

                MDLabel:
                    text: "Profile"
                    halign:'center'
                    font_size:20
                    underline:True
                    bold:True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    color: 1,1,1

                MDLabel:
                    text: "username:"
                    halign:'center'
                    font_size:20
                    underline:True
                    bold:True
                    pos_hint: {'center_x': 0.3, 'center_y': 0.7}
                    color: 1,1,1

                MDLabel:
                    id: usernamelbl
                    text: "user"
                    halign:'center'
                    font_size:20
                    pos_hint: {'center_x': 0.6, 'center_y': 0.7}
                    color: 1,1,1






<FirstScreen>:
    name: "one"
    BoxLayout:
	    orientation: 'vertical'
        canvas:
            Color:
                rgb: 0.2,0.2,0.2
            Rectangle:
                pos: self.pos
                size: self.size
    RelativeLayout:
        MDCard:
            size_hint: 1,0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                Label:
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    text:
                        'really some amazing text\n' * 100

        BoxLayout:
            size_hint_y: 0.2
    	    padding: [20,20,20,20]
    	    spacing: 15
            MDRoundFlatIconButton:
                text: 'Back'
                on_press: app.root.current = "menu"


